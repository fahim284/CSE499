FROM php:7.3-fpm

WORKDIR /var/www
RUN  apt-get update \
  && apt-get install -y wget apt-utils gnupg2

RUN curl -sL https://deb.nodesource.com/setup_10.x | bash -

RUN apt-get install -y --no-install-recommends \
    build-essential \
    libpcre3 \
    libmagickwand-dev \
    mysql-client \
    libpng-dev \
    libjpeg62-turbo-dev \
    libfreetype6-dev \
    locales \
    zip \
    jpegoptim optipng pngquant gifsicle \
    vim \
    unzip \
    git \
    curl \
    xvfb \
    nodejs \
    supervisor \
    acl

# Clear cache
RUN apt-get clean && rm -rf /var/lib/apt/lists/*

# Install composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Install extensions
RUN docker-php-ext-install pdo_mysql mbstring exif pcntl
RUN docker-php-ext-configure gd --with-gd --with-freetype-dir=/usr/include/ --with-jpeg-dir=/usr/include/ --with-png-dir=/usr/include/
RUN docker-php-ext-install gd

# Add user for laravel application
RUN groupadd -g 1000 www
RUN useradd -u 1000 -ms /bin/bash -g www www

# Copy existing application directory permissions
COPY --chown=www:www . /var/www

RUN npm install -g webpack \
	npm install -g webpack-dev-server \
	npm install -g yarn

RUN touch /etc/supervisor/conf.d/laravel-worker.conf
RUN mkdir -p /var/fitness
RUN touch /var/fitness/worker.log
RUN ln -sf /var/www/Docker/conf/laravel-worker.conf /etc/supervisor/conf.d/laravel-worker.conf
RUN mkdir -p /var/www/bootstrap/cache
RUN composer install

# Change current user to www
USER www

# Expose port 9000 and start php-fpm server
EXPOSE 9000
CMD ["php-fpm"]
